{
  "manifest_version": 3,
  "name": "Notly",
  "version": "3.1.0",
  "description": "Your intelligent AI companion for the web. Chat with any page, summarize content, and analyze selected text instantly",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "sidePanel",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Notly Chat"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "128": "icon/icon.png"
  },
  "host_permissions": [
    "https://api.notly.dev/*",
    "<all_urls>"
  ]
}